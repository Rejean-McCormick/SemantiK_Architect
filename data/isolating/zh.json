{
  "meta": {
    "version": "1.0",
    "language": "zh",
    "family": "isolating"
  },
  "name": "Chinese",
  "syntax": {
    "use_spaces": false,
    "requires_classifier": true,
    "requires_classifier_in_predicate": true,
    "adjective_order": "pre",
    "verbal_pattern": "neg_tam_verb"
  },
  "articles": {
    "indefinite": "yī"
  },
  "classifiers": {
    "default": "gè",
    "person": "gè",
    "honorific": "wèi"
  },
  "particles": {
    "plural": "men",
    "possession": "de",
    "negation": "bù",
    "tam": {
      "past": "le",
      "prog": "zài",
      "future": "jiāng"
    }
  },
  "verbs": {
    "copula": {
      "default": "shì"
    }
  },
  "structure": "{name} {copula} {predicate}."
}