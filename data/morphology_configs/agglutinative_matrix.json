{
  "_meta": {
    "name": "Agglutinative Morphology Matrix",
    "version": "1.0.0",
    "description": "Shared, data-driven configuration for agglutinative morphology (e.g. Turkish, Hungarian, Finnish). This file provides vowel harmony groups and suffix sets (plural, copula, question, tense) that a generic agglutinative engine can use to build words by stacking suffixes with the correct front/back allomorphs.",
    "notes": "The engine is expected to: (1) inspect the last vowel of the stem; (2) choose the suffix variant from 'front' or 'back'; (3) insert buffer consonants when needed; (4) follow the slot order defined per language."
  },
  "languages": {
    "tr": {
      "description": "Turkish-style 2-way vowel harmony with plural, copula, question, and past tense suffix sets.",
      "vowel_harmony": {
        "front_vowels": ["e", "i", "ö", "ü"],
        "back_vowels": ["a", "ı", "o", "u"]
      },
      "buffer_consonants": {
        "after_vowel": "y",
        "after_consonant": ""
      },
      "suffix_order": {
        "nominal_predicate": ["plural", "copula_3sg"],
        "nominal_predicate_plural_subject": ["plural", "copula_3pl"],
        "yes_no_question": ["plural", "copula_3sg", "question"],
        "yes_no_question_plural_subject": ["plural", "copula_3pl", "question"],
        "past_nominal_predicate": ["plural", "past_copula_3sg"],
        "past_nominal_predicate_plural_subject": ["plural", "past_copula_3pl"]
      },
      "suffixes": {
        "plural": {
          "type": "number",
          "front": "ler",
          "back": "lar"
        },
        "copula_3sg": {
          "type": "copula",
          "front": "dir",
          "back": "dır"
        },
        "copula_3pl": {
          "type": "copula",
