{
  "_meta": {
    "family": "romance",
    "version": 2,
    "description": "Shared Romance grammar matrix for the new RomanceMorphology-based bio renderer.",
    "notes": "Each language payload provides articles, simple gender inflection rules, and phonological triggers for the shared Romance engine."
  },
  "languages": {
    "it": {
      "name": "Italian",
      "articles": {
        "m": {
          "default": "un",
          "vowel": "un",
          "s_impure": "uno"
        },
        "f": {
          "default": "una",
          "vowel": "un'"
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "tore", "replace_with": "trice" },
          { "ends_with": "ore",  "replace_with": "rice"  },
          { "ends_with": "o",    "replace_with": "a"     }
        ],
        "irregulars": {
          "poeta":   "poetessa",
          "duca":    "duchessa",
          "re":      "regina",
          "attore":  "attrice",
          "scrittore": "scrittrice",
          "fisico":  "fisica",
          "medico":  "medica"
        }
      },
      "phonetics": {
        "impure_triggers": [
          "s_consonant",
          "z",
          "ps",
          "gn"
        ],
        "stressed_a_words": [],
        "elision": true
      },
      "structure": "{name} è {article}{sep}{profession} {nationality}."
    },

    "es": {
      "name": "Spanish",
      "articles": {
        "m": {
          "default": "un",
          "vowel": "un"
        },
        "f": {
          "default": "una",
          "stressed_a": "un"
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "or", "replace_with": "ora" },
          { "ends_with": "án", "replace_with": "ana" },
          { "ends_with": "o",  "replace_with": "a"   }
        ],
        "irregulars": {
          "rey":       "reina",
          "actor":     "actriz",
          "emperador": "emperatriz",
          "héroe":     "heroína",
          "escritor":  "escritora",
          "doctor":    "doctora",
          "fisico":    "fisica",
          "quimico":   "quimica",
          "matematico":"matematica"
        }
      },
      "phonetics": {
        "impure_triggers": [],
        "stressed_a_words": [
          "águila",
          "agua",
          "arma",
          "alma",
          "área",
          "hacha",
          "hambre"
        ],
        "elision": false
      },
      "structure": "{name} es {article}{sep}{profession} {nationality}."
    },

    "fr": {
      "name": "French",
      "articles": {
        "m": {
          "default": "un",
          "vowel": "un"
        },
        "f": {
          "default": "une",
          "vowel": "une"
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "eur", "replace_with": "euse"  },
          { "ends_with": "teur","replace_with": "trice" },
          { "ends_with": "ien", "replace_with": "ienne" },
          { "ends_with": "on",  "replace_with": "onne"  },
          { "ends_with": "el",  "replace_with": "elle"  }
        ],
        "irregulars": {
          "roi":      "reine",
          "acteur":   "actrice",
          "auteur":   "auteure",
          "docteur":  "docteure",
          "écrivain": "écrivaine",
          "scientifique": "scientifique"
        }
      },
      "phonetics": {
        "impure_triggers": [],
        "stressed_a_words": [],
        "elision": true
      },
      "structure": "{name} est {article}{sep}{profession} {nationality}."
    },

    "pt": {
      "name": "Portuguese",
      "articles": {
        "m": {
          "default": "um",
          "vowel": "um"
        },
        "f": {
          "default": "uma",
          "vowel": "uma"
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "or",  "replace_with": "ora" },
          { "ends_with": "ês",  "replace_with": "esa" },
          { "ends_with": "o",   "replace_with": "a"   }
        ],
        "irregulars": {
          "rei":        "rainha",
          "ator":       "atriz",
          "escritor":   "escritora",
          "doutor":     "doutora",
          "médico":     "médica",
          "físico":     "física",
          "químico":    "química",
          "matemático": "matemática"
        }
      },
      "phonetics": {
        "impure_triggers": [],
        "stressed_a_words": [],
        "elision": false
      },
      "structure": "{name} é {article}{sep}{profession} {nationality}."
    },

    "ro": {
      "name": "Romanian",
      "articles": {
        "m": {
          "default": "un",
          "vowel": "un"
        },
        "f": {
          "default": "o",
          "vowel": "o"
        }
      },
      "morphology": {
        "suffixes": [
          { "ends_with": "ian", "replace_with": "iană" },
          { "ends_with": "an",  "replace_with": "ană"  }
        ],
        "irregulars": {
          "rege":     "regină",
          "doctor":   "doctoriță",
          "scriitor": "scriitoare"
        }
      },
      "phonetics": {
        "impure_triggers": [],
        "stressed_a_words": [],
        "elision": false
      },
      "structure": "{name} este {article}{sep}{profession} {nationality}."
    }
  }
}
